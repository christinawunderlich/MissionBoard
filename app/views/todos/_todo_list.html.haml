%h2.sub-header To Do List
.table-responsive
  %table.table.table-striped
    %thead
      %th Title
      %th Description
      %th Status
      %th Due Date
      %th 
    %tbody
      - @todos.each do |todo|
        %tr 
          %td= todo.title
          %td= todo.description
          %td= todo.status
          %td= todo.due_date
          %td Assignees
          %td= link_to 'Edit', edit_todo_path(todo)
          %td= link_to 'Destroy', 
        %tr
          %td{ colspan '7'}, =link_to 'New Todo', new_todo_path
