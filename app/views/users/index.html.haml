%h1 Welcome to the Mission Board
%h3 Please select your user or create a new one to view the MissionBoard
.container.marketing
  - if @users.present?
    .rows.users-list
      - @users.each do |user|
        .col-lg-4.labeled-image-box
          = link_to board_path(user_id: user.id) do
            %img.img-circle{:alt => "Generic placeholder image", :height => "140", :src => "data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==", :width => "140"}/
            %h3= user.name

.new-user-form
  %h4 Neuer User?
  = form_for @user do |f|
    = f.label :name
    = f.text_field :name
    = f.submit