.container.main

.container.marketing
  - if @users.present?
    .rows.users-list
      - @users.each do |user|
        .col-lg-4.labeled-image-box
          = link_to enter_path(user_id: user.id) do
            - if user.photo.present?
              = image_tag user.photo, style: 'width: 140px; height: 140px'
            - else 
              %img.img-circle{:alt => "Generic placeholder image", :height => "140", :src => "data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==", :width => "140"}/
            %h3= user.name

.new-user-form
  %h4 Neuer User?
  = form_for @user do |f|
    = f.label :name
    = f.text_field :name, style: 'width: 265px'
    %br
      %label Photo
      = f.file_field :photo, class: 'file-input'
    = f.submit